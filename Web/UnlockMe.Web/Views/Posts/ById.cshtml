<!-- COMMENTS SECTION -->
<div class="container mt-lg-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="card p-4">
                <div class="headings d-flex justify-content-between align-items-center mb-3">
                    <h5>
                        <span><small class="font-weight-bold">Comments on  post (@Model.CommentsCount)</small></span>
                    </h5>
                    <button type="submit" class="btn btn-primary col-md-3 offset-5" onclick="showAddCommentForm()">Add comment</button>
                </div>

                <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
                <script type="text/javascript">
                    tinymce.init({
                        selector: "textarea",
                        plugins: ["image paste table link code media"]
                    });
                </script>

                <div id="AddCommentForm">
                    <form asp-controller="Comments" asp-action="Create" method="post">
                        <input type="hidden" name="PostId" value="@Model.Id" />
                        <div>
                            <label for="Content"></label>
                            <textarea name="Content" id="Content" class="form-control"></textarea>
                        </div>
                        <div>
                            <input type="submit" class="btn btn-primary" value="Upload comment &#128172" />
                        </div>
                    </form>
                </div>

                @foreach (var comment in Model.Comments)
                {
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="user d-flex flex-row align-items-center"> <img src="https://i.imgur.com/hczKIze.jpg" width="80" class="user-img rounded-circle mr-2"> <span><small class="font-weight-bold text-primary">@comment.UserUserName</small> <small class="font-weight-bold">@comment.Content</small></span> </div> <small>@comment.CreatedOn.ToShortDateString()</small>
                        <div>
                            <button type="button" class="btn btn-primary">Reply</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<hr>


