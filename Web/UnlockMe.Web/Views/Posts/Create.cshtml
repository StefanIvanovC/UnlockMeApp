            <div class="form-group">
            <label asp-for="TagId"></label>
            <select asp-for="TagId" class="form-control"></select>>
            <span asp-validation-for="TagId" class="text-danger"></span>
        </div>*@
    <hr>
    <input type="submit" class="btn btn-primary" />
</form>